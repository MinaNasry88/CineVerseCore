<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <link href="~/StyleSheet.css" rel="stylesheet" />
    <script src="~/js/bootstrap.js" ></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary" style="background-color: #e3f2fd;" data-bs-theme="light">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                <a class="navbar-brand" asp-controller="home" asp-action="index"><b>Home</b></a>
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="movies" asp-action="index"><b>Movies</b></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="tvshows" asp-action="index"><b>Tv Shows</b></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="stars" asp-action="stars"><b>Stars</b></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="writers" asp-action="writers"><b>Writers</b></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="directors" asp-action="directors"><b>Directors</b></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="MyProfile" asp-route-userName="@User.Identity?.Name"><b>My Profile</b></a>
                    </li>
                </ul>

                <div class="navbar account-links flex-1 pr" id="search-box-div">
                    <ul>
                        @if (User.Identity?.IsAuthenticated == false)
                        {
                            <li>
                                <a asp-action="Register" asp-controller="Account" style="color: green"><b>Register</b></a>
                            </li>
                            <li>
                                <a asp-action="Login" asp-controller="Account" style="color: green"><b>Login</b></a>
                            </li>
                        }
                        else
                        {
                            <li style="color: blue"><i class="fa-solid fa-user" style="color: green"></i>@User.Identity?.Name</li>
                            <li>
                                <a asp-action="Logout" asp-controller="Account" style="color:red">Logout</a>
                            </li>
                        }
                    </ul>
                </div>

            </div>
        </div>
    </nav>
    <div class="body">
        @RenderBody()
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
