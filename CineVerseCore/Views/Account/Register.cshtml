@model Register
@{
    ViewBag.Title = "Register";
}

<div class="flex">
    <div class="flex-1">
        <span class="text-grey">CineVerse</span> 
        <i class="fa-solid fa-caret-right"></i> 
        <span class="text-grey">Register</span>
    </div>
</div>


<div class="form-container">
    
    Already Registered?
    <a asp-action="Login" asp-controller="Account" class="link-hover">Login</a>
    
    <h2 class="text-large">Register</h2>

    <form asp-action="Register" asp-controller="Account" method="post">

        @* Username *@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Username" class="form-label pt">Username</label>
            </div>
            <div class="flex-1">
                <input asp-for="Username" placeholder="Username" class="form-input" />
                <span asp-validation-for="Username" class="text-red"></span>
            </div>
        </div>

        @* Email *@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Email" class="form-label pt">Email</label>
            </div>
            <div class="flex-1">
                <input asp-for="Email" placeholder="Email" class="form-input" />
                <span asp-validation-for="Email" class="text-red"></span>
            </div>
        </div>

        @* Password *@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Password" class="form-label pt">Password</label>
            </div>
            <div class="flex-1">
                <input asp-for="Password" placeholder="Password" class="form-input" />
                <span asp-validation-for="Password" class="text-red"></span>
            </div>
        </div>

        @* Confirm Password *@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="ConfirmPassword" class="form-label pt">Confirm Password</label>
            </div>
            <div class="flex-1">
                <input asp-for="ConfirmPassword" placeholder="Confirm password" class="form-input" />
                <span asp-validation-for="ConfirmPassword" class="text-red"></span>
            </div>
        </div>

        @* Phone *@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Phone" class="form-label pt">Phone</label>
            </div>
            <div class="flex-1">
                <input asp-for="Phone" placeholder="Phone" class="form-input" />
                <span asp-validation-for="Phone" class="text-red"></span>
            </div>
        </div>


        @* Register button *@
        <div class="form-field flex">
            <div class="w-25"></div>
            <div class="flex-1">
                <button type="submit" class="button button-green-back">Register</button>
                
                <div class="text-red" asp-validation-summary="All"></div>

                @* displays model errors if supplied throw ViewBag *@
                @if (ViewBag.Errors != null)
                {
                    <div class="text-red">
                        <ul>
                            @foreach (string error in ViewBag.Errors)
                            {
                                <li class="ml">@error</li>
                            }
                        </ul>
                    </div>
                }
            </div> 
        </div>

    </form>

</div>


